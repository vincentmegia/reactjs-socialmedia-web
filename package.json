{
	"name": "socialmedia",
	"version": "0.1.0",
	"private": true,
	"main": "index.js",
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.15.3",
		"bootstrap": "^4.6.0",
		"react": "^17.0.2",
		"react-bootstrap": "^1.5.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.2.0",
		"uuid": "^3.4.0"
	},
	"scripts": {
		"start": "webpack serve --mode=development --hot --open",
		"build": "webpack --mode=production",
		"test": "jest",
		"test-coverage": "jest --coverage --watchAll=false"
	},
	"devDependencies": {
		"@babel/core": "^7.13.14",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-react": "^7.13.13",
		"@babel/preset-typescript": "^7.13.0",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-router-dom": "^5.1.7",
		"@types/uuid": "^8.3.0",
		"@types/webpack": "^5.28.0",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.6.0",
		"babel-loader": "^8.2.2",
		"css-loader": "^5.2.0",
		"enzyme": "^3.11.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.3.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.4.0",
		"node-sass": "^5.0.0",
		"postcss-loader": "^5.2.0",
		"precss": "^4.0.0",
		"sass": "^1.32.8",
		"sass-loader": "^11.0.1",
		"source-map-loader": "^2.0.1",
		"style-loader": "^2.0.0",
		"ts-loader": "^8.1.0",
		"typescript": "^4.2.3",
		"webpack": "^5.28.0",
		"webpack-cli": "^4.6.0",
		"webpack-dev-server": "^3.11.2"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/setupTests.js"
		],
		"moduleNameMapper": {
			"\\.(css|less|scss)$": "identity-obj-proxy"
		},
		"testRegex": "/*.test.js$",
		"collectCoverage": true,
		"coverageReporters": [
			"lcov",
			"json",
			"html",
			"text",
			"clover"
		],
		"coverageDirectory": "test-coverage",
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		},
		"moduleDirectories": [
			"node_modules",
			"src"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-typescript",
			"@babel/preset-react"
		]
	}
}
